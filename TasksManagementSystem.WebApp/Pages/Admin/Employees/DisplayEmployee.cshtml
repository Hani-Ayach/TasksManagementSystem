@page
@model TasksManagementSystem.WebApp.Pages.Admin.Projects.Employees.DisplayEmployeeModel
@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<div class="card shadow-lg p-4 border rounded">
    <div class="card-body">
        <h4 class="card-title">@Model.Employee.FirstName @Model.Employee.LastName</h4>
        <hr />

        <p><strong>First Name:</strong> @Model.Employee.FirstName</p>
        <p><strong>Last Name:</strong> @Model.Employee.LastName</p>
        <p><strong>Email:</strong> @Model.Employee.Email</p>

        <hr />

        <div class="d-flex">
            <a class="btn btn-primary me-2" asp-page="EditEmployee" asp-route-id="@Model.Employee.Id">Edit</a>
            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Employee.Id" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-secondary ms-2" asp-page="./Index">Back</a>
        </div>
    </div>
</div>