@page
@model TasksManagementSystem.WebApp.Pages.Admin.Projects.DisplayProjectModel
@{
    ViewData["Title"] = "Project Details";
}

<h2 class="mb-4">Project Details</h2>

<!-- Project Info -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Project.Name</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Project.Description</p>
        <p class="card-text"><strong>Created At:</strong> @Model.Project.CreatedAt.ToString("yyyy-MM-dd")</p>
        <p class="card-text"><strong>Created By:</strong> @Model.Project.CreatedByName</p>
        <p class="card-text"><strong>Creator Email:</strong> @Model.Project.CreatedByEmail</p>
        <p class="card-text"><strong>Tasks Count:</strong> @Model.Project.TasksCount</p>

    </div>
</div>

<!-- Action Buttons -->
<div class="mt-4">
    <a asp-page="EditProject" asp-route-id="@Model.Project.ProjectId" class="btn btn-primary">Edit</a>
    <a asp-page="Tasks/Index" asp-route-projectId="@Model.Project.ProjectId" class="btn btn-info">View Tasks</a>

    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Project.ProjectId" class="d-inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?');">Delete</button>
    </form>

    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
